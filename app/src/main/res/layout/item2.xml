<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_height="185dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagenCard"
                android:layout_width="208dp"
                android:layout_height="match_parent"
                android:layout_weight="0"
                app:srcCompat="@drawable/ic_launcher_background" />

            <LinearLayout
                android:layout_width="309dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNombreClase"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:fontFamily="sans-serif"
                    android:text="TextView"

                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/tvCupoClase"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:background="@drawable/estiloeditext"
                    android:text="Cupo"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/tvDisponibilidad"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:background="@drawable/botonestilo"
                    android:text="Ver Horarios y turnos"
                    android:textAlignment="center" />


            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
