<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">




        <ImageView
            android:id="@+id/imagenClase"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="0dp"
            app:srcCompat="@drawable/logoadvance" />

        <TextView
            android:id="@+id/tvNombreClase"
            android:layout_width="405dp"
            android:layout_height="48dp"

            android:layout_below="@+id/imagenClase"
            android:layout_marginTop="0dp"
            android:textAlignment="center" />

        <RelativeLayout
            android:layout_width="408dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNombreClase"
            android:layout_marginTop="1dp">

            <Spinner
                android:id="@+id/spinnerLunes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                />

            <Spinner
                android:id="@+id/spinnerMartes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/spinnerLunes" />

            <Spinner
                android:id="@+id/spinnerMierc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_toEndOf="@+id/spinnerMartes" />

            <Spinner
                android:id="@+id/spinnerJueves"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/spinnerMierc" />

            <Spinner
                android:id="@+id/spinnerViernes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@+id/spinnerJueves" />
        </RelativeLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>